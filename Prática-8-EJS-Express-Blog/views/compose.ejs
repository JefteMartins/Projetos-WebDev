<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input
      class="form-control"
      type="text"
      name="postTitle"
      autocomplete="off"
      required
      autofocus
    />
    <label for="postBody">Post</label>
    <textarea class="form-control" name="postBody" cols="30" rows="5">
    </textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="postButton">
    Publish
  </button>
</form>
<%- include("partials/footer") -%>
